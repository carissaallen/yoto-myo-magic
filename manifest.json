{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "Yoto MYO Magic",
  "version": "1.19.3",
  "description": "Transform how you create Yoto MYO cards with smart imports, automatic icon matching, and more delightful shortcuts.",

  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "identity",
    "offscreen",
    "downloads",
    "cookies"
  ],

  "minimum_chrome_version": "109",

  "host_permissions": [
    "https://my.yotoplay.com/*",
    "https://api.yotoplay.com/*",
    "https://login.yotoplay.com/*",
    "https://share.yoto.co/*",
    "https://www.yotoicons.com/*",
    "https://www.google-analytics.com/*",
    "https://api.yotomyomagic.com/*",
    "https://*.cloudfront.net/*",
    "https://*.amazonaws.com/*",
    "https://cdn.yotoplay.com/*",
    "https://media.yotoplay.com/*"
  ],
  
  "optional_host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Yoto MYO Magic",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://my.yotoplay.com/*"
      ],
      "js": ["jszip.min.js", "content/content.js", "content/content-simple.js"],
      "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/styles/*.css",
        "assets/icons/*.png",
        "assets/icons/timer/ghost/*.png",
        "assets/icons/timer/tree-lights/*.png",
        "assets/images/*.png",
        "assets/audio/timer/*.wav",
        "assets/audio/alarms/*.mp3",
        "assets/timer/covers/*.png",
        "assets/timer/icons/*.png",
        "assets/timer/icons/*.gif",
        "images/podcasts/*.webp",
        "lib/*.js",
        "utils/timerIconGenerator.js",
        "callback.html",
        "callback.js",
        "offscreen/offscreen.html",
        "offscreen/*.js",
        "jszip.min.js"
      ],
      "matches": [
        "https://yotoplay.com/*",
        "https://my.yotoplay.com/*",
        "<all_urls>"
      ]
    }
  ]
}
